                      <% if experience.category_tab.include?('relax') %>
                        <div class="experience-category-relax text-center">
                          <p><i class="fa fa-sun-o"></i>Détente</p>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
          <br>
        </div>
      </div>
    </div>
