<div id="sign-up-modal-form">
  <div id="fb-signup">
    <%= link_to user_omniauth_authorize_path(:facebook), class: "btn btn-social btn-lg btn-facebook", onclick: "ga('send', 'event', 'User', 'Submit Facebook Sign In', 'User clicks on submit button with fb from sign in modal');" do %>
    <i class="fa fa-facebook"></i> Connexion en un clic
    <% end %>
  </div>
  <div class="division">
    <div class="line l"></div>
      <span>ou</span>
    <div class="line r"></div>
  </div>
  <div id="email-signup">
    <div class="text-center">
      <em class="text-center light"><i class="fa fa-envelope-o light"></i> Connectez-vous par email</em>
    </div>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div>
        <%= f.label :email do %>
          <br />
          <span class="col-xs-1 col-xs-offset-1 text-center">
            <i class="fa fa-envelope fa-2x icon-alignement"></i>
          </span>
          <%= f.email_field :email, placeholder: "indiana.jones@nyu.edu" %>
        <% end %>
      </div>
      <div>
        <%= f.label :password do %>
          <br />
          <span class="col-xs-1 col-xs-offset-1 text-center">
            <i class="fa fa-lock fa-2x icon-alignement"></i>
          </span>
          <%= f.password_field :password, placeholder: t('passwordplaceholder') %>
        <% end %>
      </div>
      <div id="forgot-password">
        <i>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to t('forgot'), new_password_path(resource_name), class: 'light' %>
          <% end %>
        </i>
        <br>
        <br>
      </div>
      <% if devise_mapping.rememberable? -%>
        <div>
          <%= f.check_box :remember_me %> <%= f.label :remember_me, class: 'light' %>
        </div>
      <% end %>
      <div class="vertical-spacer-xxs"></div>
      <br>
      <div>
        <%= f.submit t('sign_in_btn', :default => "Log in"), class: 'btn btn-info', onclick: "ga('send', 'event', 'User', 'Submit Email Sign In', 'User clicks on email submit button from sign in modal');" %>
      </div>
    <% end %>
  </div>
  <br>
  <div class='text-center'>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      Vous n'avez pas encore de compte? <%= link_to 'Inscription', '#', {onclick:"showSignUpModal();"} %>
      <br />
    <% end -%>
  </div>
</div>