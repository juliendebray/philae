<div class="wrapper">
  <div id="titleblock" class="text-center">
    <div class="title">
      <h2><%= t('providers_title') %></h2>
    </div>
  </div>
  <div class="container">
    <ul class="list-unstyled">
      <% @trip.trip_experiences.each_with_index do |trip_exp, index| %>
      <% if trip_exp.experience.providers.any? %>
        <div class="row">
          <div class="col-xs-12 col-sm-8 col-sm-offset-2">
            <h4><%= "Experience n°#{index+1}: #{trip_exp.experience.name}" %></h4>
            <ul class="list-unstyled">
                <% trip_exp.experience.providers.each do |provider, index| %>
                      <%= render('/providers/provider_block.html.erb', {provider: provider}) %>
                <% end %>
            </ul>
          </div>
        </div>
      <% end %>
      <% end %>
    </ul>
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
      <%= link_to "Conditions générales d'utilisation", mentions_legales_index_path%>
    </div>
  </div>
</div>