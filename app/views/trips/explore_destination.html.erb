                        <%= simple_format truncate(experience.description, length: 200, separator: ' ') %>
                      </div>
                      <div class="experience-know-more">
                        <p><%= link_to "En savoir plus", modal_exp_path(@trip.id, experience.id), remote: true, onclick:"ga('send', 'event', 'User', 'Experience Detail from Que voir - incontournables', 'User clicks on experience #{experience.name} from explore_destination');" %></p>
